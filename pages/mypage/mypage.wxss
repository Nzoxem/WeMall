.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.userInfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  background: #e85654;
  width: 750rpx;
}

.userInfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userName {
  margin-top: 20rpx;
  color: #fff;
}

.my-item {
  width: 100%;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
}

